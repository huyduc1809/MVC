<div id="PageContainer" class="is-moved-by-drawer">
    <main class="main-content" role="main">


        <section id="collection-wrapper">
            <div class="wrapper">

                <div class="inner">
                    <div class="grid">
                        <div class="grid__item large--one-whole">



                            <h1 class="search-h1 text-center"><strong>Kết quả tìm kiếm</strong><br></h1>
                            <div class="grid-uniform search-body-wrapper">
                                <!-- begin grid search results-->

                                @foreach (var i in Model)
                                {
                                    <div class="search-item grid__item large--one-quarter medium--one-third small--one-half">
                                        <div class="product-item">
                                            <div class="product-normal">
                                                <div class="product-img">
